<% @total_validos = 0 %>
<% @total_invalidos = 0 %>
<% @total_validos_manha = 0 %>
<% @total_invalidos_manha = 0 %>
<% @total_validos_tarde = 0 %>
<% @total_invalidos_tarde = 0 %>
<% @total_validos_noite = 0 %>
<% @total_invalidos_noite = 0 %>

<table>
  <tr class="blue">
    <th>Mat</th>
    <th>Agente</th>
